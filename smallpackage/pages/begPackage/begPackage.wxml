<scroll-view class='container' scroll-y style='background-color:#fff;' wx:if="{{begPackage}}">
  <view class='package'>
    <image src='{{begPackage.avatarUrl}}' class='avatarUrl'></image>
    <view class='package_box'>
      <view wx:if="{{begPackage.job_type==0}}" class='package_box_view'>{{begPackage.context}}</view>
      <image wx:elif="{{begPackage.job_type==2}}" class='package_box_image'  src='{{begPackage.context}}' mode="aspectFit"></image>
      <view class='package_box_voice' wx:elif="{{begPackage.job_type==1}}">
        <image class='package_box_voice_pic1' src='/images/66.png' data-src='{{begPackage.context}}' catchtap='toVoicePlay'></image>
        <view style='color:#d85940;font-size:28rpx;margin-top:12rpx;font-weight:bold;'>点击播放</view>
        <image style='width:495rpx;height:37rpx;margin-top:36rpx;' src='/images/61.png'></image>
      </view>
    </view>

    <view class='package_award'>
      <image src='/images/67.png'></image>
      <view>该好友向您讨要¥6.66红包</view>
    </view>

    <view wx:if="{{!state}}" class='package_btns'>
      <button size='mini' catchtap='toPay'>
        <image src='/images/68.png'></image>
      </button>
      <button size='mini' catchtap='toBeg'>
        <image src='/images/69.png'></image>
      </button>
    </view>
    <!-- 我看自己发的 -->
    <view wx:elif="{{state}}" class='package_btns'>
      <button size='mini' open-type='share'>
        <image src='/images/76.png'></image>
      </button>
      <button size='mini' catchtap='toBeg'>
        <image src='/images/75.png'></image>
      </button>
    </view>

    <image style='width:24rpx;height:30rpx;margin-top:40rpx' src='/images/70.png'></image>
  </view>

  <view class='gap'></view>
  <view class='award'>
    <view class='award_top'>
      <image src='/images/71.png'></image>
      <view>打赏列表</view>
    </view>

    <view class='award_info'>
      <image class="award_info_ava" src='{{userInfo.avatarUrl}}'></image>
      <view class='award_info_x' wx:if="{{state}}">
        <button class='award_info_x_b' size='mini'>去答谢</button>
        <view>2018-12-09</view>
      </view>
      <view wx:elif="{{!state}}" class='award_info_1_view'>6.66元</view>
    </view>

    <view class='award_info'>
      <image class="award_info_ava" src='{{userInfo.avatarUrl}}'></image>
      <view class='award_info_x' wx:if="{{state}}">
        <button class='award_info_x_b1' size='mini'>已答谢</button>
        <view>2018-12-09</view>
      </view>
      <view wx:elif="{{!state}}" class='award_info_1_view'>6.66元</view>
    </view>

    <view class='award_info'>
      <image class="award_info_ava" src='{{userInfo.avatarUrl}}'></image>
      <view class='award_info_x' wx:if="{{state}}">
        <button class='award_info_x_b' size='mini'>去答谢</button>
        <view>2018-12-09</view>
      </view>
      <view wx:elif="{{!state}}" class='award_info_1_view'>6.66元</view>
    </view>

    <view style='height:1rpx;'></view>
  </view>
</scroll-view>