.package {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #d85940;
  padding-bottom: 50rpx;
}

.avatarUrl {
  width: 87rpx;
  height: 87rpx;
  border-radius: 87rpx;
  margin-top: 20rpx;
  border: 4rpx solid #fff;
}

.package_box {
  width: 690rpx;
  height: 350rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.package_box_view {
  width: 610rpx;
  height: 310rpx;
  color: #d85940;
  font-size: 42rpx;
  margin-top: 40rpx;
  overflow: hidden;
}

.package_box_image {
  width: 320rpx;
  height: 320rpx;
  margin-top: 15rpx;
}

.package_box_voice {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.package_box_voice_pic1 {
  width: 98rpx;
  height: 98rpx;
  margin-top: 84rpx;
}

.package_award {
  display: flex;
  margin-top: 40rpx;
  align-items: center;
}

.package_award > image {
  width: 36rpx;
  height: 36rpx;
}

.package_award > view {
  color: #ffe695;
  font-weight: 500;
  font-size: 32rpx;
  margin-left: 16rpx;
}

.package_btns {
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
}

.package_btns > button {
  width: 330rpx;
  height: 120rpx;
  margin: 0;
  padding: 0;
  position: relative;
  border-radius: 120rpx;
  background-color: #d85940;
  border: none;
}

.package_btns > button:after {
  border: none;
}

.package_btns>button>image {
  width: 330rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.gap {
  height: 40rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  bottom: 20rpx;
}

.award {
  width: 690rpx;
  margin-left: 30rpx;
}

.award_top {
  display: flex;
  align-items: center;
  position: relative;
  bottom: 20rpx;
  margin-bottom: 20rpx;
}

.award_top > image {
  width: 28rpx;
  height: 28rpx;
}

.award_top > view {
  color: #d85940;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 12rpx;
}

.award_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.award_info_ava {
  width: 82rpx;
  height: 82rpx;
  border-radius: 8rpx;
}

.award_info_x {
  display: flex;
