.bg{
  background-color: #fff;
}
.main{
  width: 100%;
  height: 100%;
}
.list{
  margin-left: 40rpx;
  display: flex;
  margin-bottom: 100rpx;
}
.list>image{
  width: 84rpx;
  height: 84rpx;
  border: 1rpx solid #d85940;
  border-radius: 12rpx;
}
.box{
  position:relative;
  width: 550rpx;
  height: 152rpx;
  margin-left: 26rpx;
}
.box_1{
  width: 550rpx;
  height: 152rpx;
