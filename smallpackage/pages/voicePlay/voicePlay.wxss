  width: 72.8rpx;
  height: 128rpx;
  position: relative;
  bottom: 310rpx;
}
.main_play{
  color:#fff;
  font-size: 36rpx;
  margin-top: 78rpx;
  font-weight: bold;
}
.main_b_pic{
  width: 130rpx;
