.main{
  width: 100%;
  height: 100%;
  background-color: #D85940;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top{
  width: 690rpx;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.top image{
  width: 30rpx;
  height: 30rpx;
}
.top view{
  font-size: 24rpx;
  color:#838383;
  margin-left: 12rpx;
}
.article{
  width: 690rpx;
  height: calc(100% - 110rpx);
  background-color: #fff;
  margin-top: 30rpx;
  border-radius: 10rpx 10rpx 0 0;
}
textarea{
  width: 630rpx;
  height: 260rpx;
  margin: 30rpx;
  font-size: 32rpx;
  color: #838383;
  position: relative;
}
.btns{
  width: 610rpx;
  height: 90rpx;
  margin: 0 40rpx;
  display: flex;
  justify-content: space-between;
}
.btns view{
  width: 285rpx;
  height: 90rpx;
  background-color: #E7E7E7;
  font-size: 32rpx;
  color: #838383;
  text-align: center;
  line-height: 90rpx;
  border-radius: 10rpx;
  box-shadow: 0 6rpx 12rpx 0 rgba(227,227,227,0.50);
}
.btn{
  background-color: #D85940 !important;
  color: #fff !important;
}
.historyBar{
  margin: 90rpx 0 30rpx 40rpx;
  color: #838383;
  font-size: 28rpx;
}
.history{
  width: 570rpx;
  padding: 20rpx;
  margin: 0 0 30rpx 40rpx;
  background-color: #F7F7F7;
  border-radius: 8rpx;
  color: #838383;
  font-size: 28rpx;
}
.count{
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 28rpx;
  color:#838383;
}

.bottom{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}
.bottom image{
  width: 28rpx;
  height: 28rpx;
}
.bottom view{
  font-size: 28rpx;
  color: #586B95;
  margin-left: 10rpx;
}
.card{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color:rgba(0,0,0,0.4);
  position: absolute;
  left: 0;
  top: 0;
}
.card_box{
  width: 600rpx;
  height: 500rpx;
  border-radius: 12rpx;
  background-color: #fff;
  text-align: center;
}
.checkGif{
  width: 400rpx;
  height: 400rpx;
}
.card_box view{
  font-size: 30rpx;
  color:#838383;
  text-align: center;
}
