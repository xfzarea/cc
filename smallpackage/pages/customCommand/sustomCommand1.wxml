<view class="main">
  <view class='top'>
    <image src='/images/7.png'></image>
    <view>提示：推荐的内容会经人工审核，请勿输入违禁内容</view>
  </view>

  <view class="article">
    <textarea wx:if="{{type==1}}" placeholder="请输入..." value='{{context}}' maxlength="30" bindinput="input">
      <view class='count'>{{count}}/30</view>
    </textarea>
    
    <view wx:elif="{{type==2}}" class='article_view {{context?"article_view_se":""}}' catchtap='chooseImage'>
      <view wx:if="{{context==''}}">点击选择图片~~</view>
      <image src='{{context}}' mode='aspectFit' class='article_view_image'></image>
    </view>

    <view class='btns'>
      <view catchtap='cancel'>取消</view>
      <view class='{{over?"btn":""}}' catchtap='{{over?"submit":""}}'>完成</view>
    </view>
